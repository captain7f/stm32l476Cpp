UartBase::UartBase(){

}

UartBase::~UartBase(){
	if(_Instance == USART1){
		if(!isInit[0]) return;
		isInit[0]= false;
		HAL_UART_MspDeInit(_huart);
	}
}

HAL_StatusTypeDef UartBase::write(uint8_t* pData, uint16_t Size, uint32_t Timeout){
	return HAL_UART_Transmit(_huart,pData, Size, Timeout);
}

